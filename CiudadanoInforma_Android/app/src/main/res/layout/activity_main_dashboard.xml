<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".ui.main.MainDashboard"
    tools:ignore="MissingDefaultResource">

    <ImageButton
        android:id="@+id/btnOtros"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/cardview_shadow_end_color"
        android:scaleType="fitXY"
        android:src="@drawable/otros"
        app:layout_constraintEnd_toStartOf="@+id/g2"
        app:layout_constraintTop_toBottomOf="@+id/btnAgresion" />

    <ImageButton
        android:id="@+id/btnRobo"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="13dp"
        android:backgroundTint="@color/cardview_shadow_end_color"
        android:scaleType="fitXY"
        android:src="@drawable/robo"
        app:layout_constraintStart_toStartOf="@+id/g1"
        app:layout_constraintTop_toBottomOf="@+id/btnParques" />

    <ImageButton
        android:id="@+id/btnParques"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="13dp"
        android:backgroundTint="@color/cardview_shadow_end_color"
        android:scaleType="fitXY"
        android:src="@drawable/parques_y_jardines"
        app:layout_constraintStart_toStartOf="@+id/g1"
        app:layout_constraintTop_toBottomOf="@+id/btnMaltrato" />

    <ImageButton
        android:id="@+id/btnAgresion"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/cardview_shadow_end_color"
        android:scaleType="fitXY"
        android:src="@drawable/agresiones"
        app:layout_constraintEnd_toStartOf="@+id/g2"
        app:layout_constraintTop_toBottomOf="@+id/btnVandalismo" />

    <ImageButton
        android:id="@+id/btnMaltrato"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="13dp"
        android:backgroundTint="@color/cardview_shadow_end_color"
        android:scaleType="fitXY"
        android:src="@drawable/maltrato_animal"
        app:layout_constraintStart_toStartOf="@+id/g1"
        app:layout_constraintTop_toBottomOf="@+id/btnIncendios" />

    <ImageButton
        android:id="@+id/btnVandalismo"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/cardview_shadow_end_color"
        android:scaleType="fitXY"
        android:src="@drawable/vandalismo"
        app:layout_constraintEnd_toStartOf="@+id/g2"
        app:layout_constraintTop_toBottomOf="@+id/btnInundacion" />

    <ImageButton
        android:id="@+id/btnIncendios"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/cardview_shadow_end_color"
        android:scaleType="fitXY"
        android:src="@drawable/incendios"
        app:layout_constraintStart_toStartOf="@id/g1"
        app:layout_constraintTop_toTopOf="@id/g4" />

    <ImageButton
        android:id="@+id/btnInundacion"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/cardview_shadow_end_color"
        android:scaleType="fitXY"
        android:src="@drawable/inundaciones"
        app:layout_constraintEnd_toStartOf="@+id/g2"
        app:layout_constraintTop_toTopOf="@+id/g4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.97" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03" />

    <ImageButton
        android:id="@+id/btnInsertarIncidencia"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/boton_add2"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/g3"
        app:layout_constraintEnd_toStartOf="@+id/btnLogOut"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toEndOf="@+id/btnTodos"
        app:layout_constraintTop_toTopOf="@+id/g4"
        app:layout_constraintVertical_bias="0.936" />

    <Button
        android:id="@+id/btnLogOut"
        android:layout_width="116dp"
        android:layout_height="65dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/azulCielo"
        android:fontFamily="@font/bebas"
        android:text="Cerrar SesiÃ³n"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/g3"
        app:layout_constraintEnd_toStartOf="@+id/g2"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintStart_toStartOf="@+id/btnOtros"
        app:layout_constraintTop_toBottomOf="@+id/btnOtros"
        app:layout_constraintVertical_bias="0.379" />

    <Button
        android:id="@+id/btnTodos"
        android:layout_width="116dp"
        android:layout_height="65dp"

        android:layout_marginStart="20dp"
        android:backgroundTint="@color/azulCielo"
        android:fontFamily="@font/bebas"
        android:text="@string/btnTodos"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/g3"
        app:layout_constraintEnd_toEndOf="@+id/btnRobo"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="@+id/g1"
        app:layout_constraintTop_toBottomOf="@+id/btnRobo"
        app:layout_constraintVertical_bias="0.379" />

</androidx.constraintlayout.widget.ConstraintLayout>